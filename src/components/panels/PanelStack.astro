---
import { order, nameOf } from "@/lib/colors";
import Panel from "./Panel.astro";
import About from "../sections/About.astro";
import Skills from "../sections/Skills.astro";
import Projects from "../sections/Projects.astro";
import Experience from "../sections/Experience.astro";
import Contact from "../sections/Contact.astro";
---

<div class="relative h-full w-full rounded-lg overflow-hidden">
    {
        order.map((cid, i) => {
            const name = nameOf(cid);
            return (
                <Panel
                    id={`panel-${name}`}
                    color={cid}
                    active={i === 0}
                    label={name}
                >
                    {name === "blue" && <About />}
                    {name === "green" && <Skills />}
                    {name === "yellow" && <Projects />}
                    {name === "orange" && <Experience />}
                    {name === "magenta" && <Contact />}
                </Panel>
            );
        })
    }
    <slot />
</div>
