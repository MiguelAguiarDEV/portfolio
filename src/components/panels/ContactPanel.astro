---

<div class="contact-panel">
    <div class="contact-content">
        <div class="contact-header">
            <h2 class="contact-title" data-i18n-key="contact.title">
                ¬°Hablemos!
            </h2>
            <p class="contact-subtitle" data-i18n-key="contact.subtitle">
                Estoy disponible para nuevos proyectos y oportunidades. No dudes en contactarme.
            </p>
        </div>

        <div class="contact-grid">
            {
                contactInfo.map((item) => (
                    <div class="contact-item card">
                        <div class="contact-icon">{item.icon}</div>
                        <div class="contact-details">
                            <span class="contact-label" data-i18n-key={item.labelKey}>
                                {item.label}
                            </span>
                            {item.link ? (
                                <a
                                    href={item.link}
                                    class="contact-value contact-link"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    data-i18n-key={item.valueKey}
                                >
                                    {item.value}
                                </a>
                            ) : (
                                <span class="contact-value" data-i18n-key={item.valueKey}>
                                    {item.value}
                                </span>
                            )}
                        </div>
                    </div>
                ))
            }
        </div>

        <div class="contact-cta">
            <a
                href="mailto:miguel@example.com?subject=Hola%20Miguel"
                class="btn btn-primary-large"
                data-i18n-key="contact.cta"
            >
                Enviar Email
            </a>
        </div>
    </div>
</div>

<style>
    .contact-panel {
        width: 100%;
        height: 100%;
        max-height: 100%;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 24px;
    }

    .contact-content {
        width: 100%;
        max-width: 700px;
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    .contact-header {
        text-align: center;
    }

    .contact-title {
        margin: 0 0 12px;
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--ink);
        background: linear-gradient(135deg, #5dd3ff, #4a9eff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .contact-subtitle {
        margin: 0;
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.6;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 16px;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 20px;
        background: var(--panel);
        border: 1px solid var(--ring);
        border-radius: var(--br-big);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.35);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .contact-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.45);
    }

    .contact-icon {
        font-size: 2rem;
        flex-shrink: 0;
    }

    .contact-details {
        display: flex;
        flex-direction: column;
        gap: 4px;
        min-width: 0;
    }

    .contact-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.6);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .contact-value {
        font-size: 1rem;
        font-weight: 600;
        color: var(--ink);
        word-break: break-word;
    }

    .contact-link {
        color: var(--accent);
        text-decoration: none;
        transition: opacity 0.2s ease;
    }

    .contact-link:hover {
        opacity: 0.8;
    }

    .contact-cta {
        display: flex;
        justify-content: center;
        margin-top: 8px;
    }

    .btn-primary-large {
        padding: 16px 40px;
        font-size: 1.1rem;
        font-weight: 700;
        background: linear-gradient(135deg, var(--accent), #4a9eff);
        color: #fff;
        border: none;
        box-shadow: 0 8px 24px rgba(93, 211, 255, 0.3);
    }

    .btn-primary-large:hover {
        box-shadow: 0 12px 32px rgba(93, 211, 255, 0.4);
        transform: scale(1.05);
    }

    @media (max-width: 640px) {
        .contact-panel {
            padding: 16px;
        }

        .contact-content {
            gap: 24px;
        }

        .contact-title {
            font-size: 2rem;
        }

        .contact-subtitle {
            font-size: 1rem;
        }

        .contact-grid {
            grid-template-columns: 1fr;
            gap: 12px;
        }

        .btn-primary-large {
            padding: 14px 32px;
            font-size: 1rem;
        }
    }
</style>
