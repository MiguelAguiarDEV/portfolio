---
import Section from "@/layout/Section.astro";
import Container from "@/layout/Container.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import "@fontsource/poppins";

const EMAIL = import.meta.env.PUBLIC_CONTACT_EMAIL ?? "miguel@example.com";
const CV_URL =
    import.meta.env.PUBLIC_CV_URL ?? "/cv/Miguel_Santiesteban_CV.pdf";
---

<Section sectionName="About" bgColor="#0B4F4A" itsFirst={true}>
    <div class="about-layout">
        <aside class="about-sidebar">
            <Container class="about-photo-card">
                <img
                    class="about-photo"
                    src="/img/foto-yo.png"
                    alt="Foto de Miguel Santiesteban"
                    loading="lazy"
                    decoding="async"
                />
            </Container>
            <Container class="about-tags info">
                <div class="chip-list">
                    <span class="chip">Backend</span>
                    <span class="chip">Canary Islands</span>
                    <span class="chip">Remote</span>
                    <span class="chip">CS student</span>
                    <span class="chip">English / Spanish</span>
                </div>
            </Container>
        </aside>

        <div class="about-content info">
            <section class="about-section about-section--intro">
                <h3 class="subheading">About me</h3>
                <Container class="about-card about-card-fill">
                    <p>
                        I'm Miguel Santiesteban, a 22-year-old Computer Science
                        student from the Canary Islands, Spain. I specialize in
                        backend development and love building projects from the
                        ground up, solving hard problems, and learning
                        continuously.
                    </p>
                    <div class="proj-actions">
                        <a class="btn-primary btn-compact" href={CV_URL} download
                            >Download CV</a
                        >
                        <a
                            class="btn-secondary btn-compact"
                            href={`mailto:${EMAIL}?subject=Contacto%20-%20Miguel%20Santiesteban`}
                            >Contact</a
                        >
                    </div>
                </Container>
            </section>

            <section class="about-section about-section--stack">
                <h3 class="subheading">Stack</h3>
                <Container class="about-card">
                    <div class="chip-list">
                        <span class="chip">TypeScript</span>
                        <span class="chip">Node.js</span>
                        <span class="chip">NestJS</span>
                        <span class="chip">Prisma</span>
                        <span class="chip">PostgreSQL</span>
                        <span class="chip">MySQL</span>
                        <span class="chip">React</span>
                        <span class="chip">Next.js</span>
                        <span class="chip">Docker</span>
                        <span class="chip">AWS</span>
                    </div>
                </Container>
            </section>

            <section class="about-section about-section--projects">
                <h3 class="subheading">Top projects</h3>
                <div class="about-projects">
                    <ProjectCard
                        title="GigRadar"
                        description="Plataforma que agrega ofertas freelance y las distribuye via colas y webhooks personalizados."
                        tags={["NestJS", "PostgreSQL", "Redis"]}
                        liveUrl="#"
                        repoUrl="#"
                        media={[
                            {
                                kind: "image",
                                src: "/img/pj.png",
                                alt: "Dashboard de GigRadar",
                            },
                            {
                                kind: "image",
                                src: "/img/pj2.png",
                                alt: "Detalle de tareas en GigRadar",
                            },
                        ]}
                    />
                    <ProjectCard
                        title="PulseOps"
                        description="Panel de observabilidad que centraliza metricas de microservicios con alertas en tiempo real."
                        tags={["TypeScript", "GraphQL", "Docker"]}
                        repoUrl="#"
                        media={[
                            {
                                kind: "image",
                                src: "/img/pj2.png",
                                alt: "Pantalla de PulseOps",
                            },
                            {
                                kind: "image",
                                src: "/img/pj.png",
                                alt: "Vista de alertas en PulseOps",
                            },
                        ]}
                    />
                    <ProjectCard
                        title="Launchmate"
                        description="Kit para lanzar MVPs en 48h con plantillas Astro y despliegues automatizados."
                        tags={["Astro", "Vercel", "CI/CD"]}
                        liveUrl="#"
                        media={[
                            {
                                kind: "image",
                                src: "/img/pj.png",
                                alt: "Landing de Launchmate",
                            },
                        ]}
                    />
                </div>
            </section>
        </div>
    </div>
</Section>

<style>
    .about-layout {
        height: 100%;
        min-height: 0;
        display: grid;
        grid-template-columns: minmax(0, 380px) minmax(0, 1fr);
        grid-template-rows: minmax(0, 1fr);
        gap: 1rem;
    }

    .about-sidebar {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        min-height: 0;
    }

    .container.about-photo-card {
        flex: 1 1 auto;
        display: block;
        height: 100%;
        min-height: clamp(260px, 55vh, 520px);
        padding: 0;
        overflow: hidden;
    }

    .container.about-photo-card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .about-photo {
        mask: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 1) 0%,
            rgba(0, 0, 0, 1) 70%,
            rgba(0, 0, 0, 0) 100%
        );
        -webkit-mask: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 1) 0%,
            rgba(0, 0, 0, 1) 70%,
            rgba(0, 0, 0, 0) 100%
        );
    }

    .container.about-tags {
        flex: 0 0 auto;
        height: auto;
        padding: 0.85rem 1rem;
    }

    .chip-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .about-content {
        display: grid;
        grid-template-rows: auto auto 1fr;
        gap: 0.75rem;
        min-height: 0;
    }

    .about-section {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        min-height: 0;
    }

    .about-section--intro,
    .about-section--stack {
        min-height: 0;
    }

    .about-section--projects {
        min-height: 0;
        display: flex;
        flex-direction: column;
    }

    .container.about-card {
        height: auto;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
        padding: 1.25rem;
    }

    .container.about-card p {
        margin: 0;
    }

    .container.about-card.about-card-fill {
        flex: 1 1 0%;
        min-height: 0;
    }

    .info {
        font-family:
            "Poppins",
            ui-sans-serif,
            system-ui,
            -apple-system,
            "Segoe UI",
            Roboto,
            "Helvetica Neue",
            Arial;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.7rem;
        text-align: left;
        color: rgba(255, 255, 255, 0.92);
    }


    .btn-primary,
    .btn-secondary {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.6rem 1rem;
        border-radius: 0.8rem;
        font-weight: 600;
        border: 1px solid;
        transition:
            transform 0.12s ease,
            opacity 0.12s ease;
        will-change: transform;
    }

    .btn-primary {
        background: color-mix(in oklab, white 14%, transparent);
        border-color: color-mix(in oklab, white 36%, transparent);
    }

    .btn-secondary {
        background: transparent;
        border-color: color-mix(in oklab, white 28%, transparent);
    }

    .btn-primary:hover,
    .btn-secondary:hover {
        transform: translateY(-1px);
    }

    .proj-actions {
        display: flex;
        gap: 0.6rem;
        flex-wrap: wrap;
    }

    .subheading {
        margin-left: 0.5rem;
        font-weight: 600;
        font-size: 1.05rem;
        letter-spacing: 0.01em;
    }

    .about-projects {
        flex: 1 1 auto;
        min-height: 0;
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        grid-auto-rows: minmax(0, 1fr);
        gap: 0.75rem;
        align-items: stretch;
    }

    .about-projects :global(.proj-card) {
        height: 100%;
        display: flex;
        flex-direction: column;
        min-height: 0;
    }

    .about-projects :global(.proj-media) {
        flex: 1 1 auto;
        min-height: 0;
        display: flex;
        max-height: clamp(160px, 32vh, 240px);
    }

    .about-projects :global(.proj-media > .slider) {
        flex: 1 1 auto;
    }

    .about-projects :global(.proj-meta) {
        flex: 0 0 auto;
    }

    @media (max-width: 1280px) {
        .about-layout {
            grid-template-columns: minmax(0, 340px) minmax(0, 1fr);
        }
    }

    @media (max-width: 1100px) {
        .about-projects {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }

    @media (max-width: 900px) {
        .about-layout {
            display: flex;
            flex-direction: column;
            height: auto;
        }

        .about-sidebar {
            flex-direction: row;
        }

        .container.about-photo-card {
            min-height: clamp(220px, 45vh, 360px);
        }

        .about-content {
            height: auto;
        }

        .about-projects {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }

    @media (max-width: 760px) {
        .about-projects {
            grid-template-columns: 1fr;
            grid-auto-rows: auto;
        }
    }

    @media (max-width: 640px) {
        .about-sidebar {
            flex-direction: column;
        }

        .container.about-photo-card {
            min-height: 240px;
        }

        .about-layout {
            gap: 0.75rem;
        }

        .container.about-card {
            padding: 1rem;
        }

        .subheading {
            margin-left: 0;
        }

        .info {
            font-size: 0.95rem;
            line-height: 1.6rem;
        }
    }
</style>


