---
import Section from "@/layout/Section.astro";
import Container from "@/layout/Container.astro";
import "@fontsource/poppins";

const EMAIL = import.meta.env.PUBLIC_CONTACT_EMAIL ?? "miguel@example.com";
const CV_URL =
    import.meta.env.PUBLIC_CV_URL ?? "/cv/Miguel_Santiesteban_CV.pdf";
---

<Section sectionName="About" bgColor="#0B4F4A" itsFirst={true}>
    <!-- Grid: izquierda fija, derecha flexible -->
    <div
        class="grid h-full w-full grid-cols-[420px_minmax(0,1fr)] gap-4 items-stretch min-h-0"
    >
        <!-- Columna izquierda -->
        <div class="h-full flex flex-col min-h-0">
            <Container class="flex-1 min-h-0 rounded-xl">
                <img
                    class="about-photo w-full h-full object-cover block mt-auto"
                    src="/img/foto-yo.png"
                    alt="Foto de Miguel Santiesteban"
                />
            </Container>

            <div class="shrink-0 w-full mt-3">
                <Container class="!h-auto info">
                    <div class="flex flex-wrap gap-2">
                        <span class="chip">Backend</span>
                        <span class="chip">Canary Islands</span>
                        <span class="chip">Remote</span>
                        <span class="chip">CS student</span>
                        <span class="chip">English / Spanish</span>
                    </div>
                </Container>
            </div>
        </div>

        <!-- Columna derecha -->
        <div class="flex flex-col gap-4 min-h-0 overflow-auto info">
            <!-- About -->
            <div class="w-full flex flex-col flex-none">
                <h3 class="subheading shrink-0">About me</h3>
                <Container
                    class="!flex !flex-col !items-start !justify-start !p-3 !gap-6 !h-auto flex-none"
                >
                    <p>
                        I’m Miguel Santiesteban, a 22-year-old Computer Science
                        student from the Canary Islands, Spain. I specialize in
                        backend development and love building projects from the
                        ground up, solving hard problems, and learning
                        continuously.
                    </p>
                    <div class="proj-actions">
                        <a
                            class="btn-primary btn-compact"
                            href={CV_URL}
                            download
                        >
                            Download CV
                        </a>
                        <a
                            class="btn-secondary btn-compact"
                            href={`mailto:${EMAIL}?subject=Contacto%20—%20Miguel%20Santiesteban`}
                        >
                            Contact
                        </a>
                    </div>
                </Container>
            </div>

            <!-- Stack -->
            <div class="w-full flex flex-col flex-none">
                <h3 class="subheading shrink-0">Stack</h3>
                <Container
                    class="!flex !flex-col !items-start !justify-start gap-4 p-6 !h-auto flex-none"
                >
                    <div class="flex flex-wrap gap-2">
                        <span class="chip">TypeScript</span>
                        <span class="chip">Node.js</span>
                        <span class="chip">NestJS</span>
                        <span class="chip">Prisma</span>
                        <span class="chip">MySQL</span>
                        <span class="chip">React</span>
                        <span class="chip">Docker</span>
                    </div>
                </Container>
            </div>

            <!-- Top projects -->
            <div class="w-full flex flex-col flex-none">
                <h3 class="subheading shrink-0">Top projects</h3>
                <Container
                    class="!flex !flex-col !items-start !justify-start !p-3 !gap-6 !h-auto flex-none"
                >
                    <p>
                        I’m Miguel Santiesteban, a 22-year-old Computer Science
                        student from the Canary Islands, Spain. I specialize in
                        backend development and love building projects from the
                        ground up, solving hard problems, and learning
                        continuously.
                    </p>
                </Container>
            </div>
        </div>
    </div>
</Section>

<style>
    .about-photo {
        mask: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 1) 0%,
            rgba(0, 0, 0, 1) 70%,
            rgba(0, 0, 0, 0) 100%
        );
        -webkit-mask: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 1) 0%,
            rgba(0, 0, 0, 1) 70%,
            rgba(0, 0, 0, 0) 100%
        );
    }

    .info {
        font-family:
            "Poppins",
            ui-sans-serif,
            system-ui,
            -apple-system,
            "Segoe UI",
            Roboto,
            "Helvetica Neue",
            Arial;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.75rem;
        text-align: justify !important;
        opacity: 0.9;
    }

    .chip {
        padding: 0.4rem 0.8rem;
        border-radius: 9999px;
        font-size: 0.85rem;
        line-height: 1;
        background: color-mix(in oklab, white 6%, transparent);
        border: 1px solid color-mix(in oklab, white 28%, transparent);
        box-shadow: 0 1px 0 rgba(0, 0, 0, 0.2) inset;
        backdrop-filter: saturate(140%) blur(8px);
    }

    .btn-primary,
    .btn-secondary {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.6rem 1rem;
        border-radius: 0.8rem;
        font-weight: 600;
        border: 1px solid;
        transition:
            transform 0.12s ease,
            opacity 0.12s ease;
        will-change: transform;
    }
    .btn-primary {
        background: color-mix(in oklab, white 14%, transparent);
        border-color: color-mix(in oklab, white 36%, transparent);
    }
    .btn-secondary {
        background: transparent;
        border-color: color-mix(in oklab, white 28%, transparent);
    }
    .btn-primary:hover,
    .btn-secondary:hover {
        transform: translateY(-1px);
    }

    .subheading {
        margin-left: 1rem;
        font-weight: 500;
        font-size: 1.05rem;
        opacity: 100%;
    }

    .proj-grid {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 0.75rem;
    }
    .proj-card {
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
        padding: 1rem;
        border-radius: 0.9rem;
        background: color-mix(in oklab, white 8%, transparent);
        border: 1px solid color-mix(in oklab, white 28%, transparent);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        backdrop-filter: saturate(140%) blur(10px);
    }
    .proj-title {
        margin: 0;
        font-weight: 700;
    }
    .proj-desc {
        margin: 0.1rem 0 0 0;
        font-size: 0.9rem;
        opacity: 0.9;
    }
    .proj-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem;
    }
    .proj-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: auto;
    }

    .btn-compact {
        padding: 0.45rem 0.8rem;
        border-radius: 0.7rem;
        font-weight: 600;
    }

    @media (max-width: 1280px) {
        .proj-grid {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }
    @media (max-width: 1024px) {
        .proj-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
