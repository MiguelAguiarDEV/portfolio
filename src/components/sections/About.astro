---
import Section from "@/layout/Section.astro";
import Container from "@/layout/Container.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import "@fontsource/poppins";

const EMAIL = import.meta.env.PUBLIC_CONTACT_EMAIL ?? "miguel@example.com";
const CV_URL =
    import.meta.env.PUBLIC_CV_URL ?? "/cv/Miguel_Santiesteban_CV.pdf";
---

<Section sectionName="About" bgColor="#0B4F4A" itsFirst={true}>
    <div
        class="grid h-full w-full grid-cols-[420px_minmax(0,1fr)] grid-rows-[minmax(0,1fr)] gap-4 items-stretch min-h-0"
    >
        <!-- Izquierda -->
        <div class="h-full flex flex-col min-h-0">
            <Container class="flex-1 min-h-0 rounded-xl">
                <img
                    class="about-photo w-full h-full object-cover block mt-auto"
                    src="/img/foto-yo.png"
                    alt="Foto de Miguel Santiesteban"
                />
            </Container>
            <div class="shrink-0 w-full mt-3">
                <Container class="!h-auto info">
                    <div class="flex flex-wrap gap-4">
                        <span class="chip">Backend</span>
                        <span class="chip">Canary Islands</span>
                        <span class="chip">Remote</span>
                        <span class="chip">CS student</span>
                        <span class="chip">English / Spanish</span>
                    </div>
                </Container>
            </div>
        </div>

        <!-- Derecha: scroll global; primer bloque ocupa el resto -->
        <div class="flex flex-col h-full min-h-0">
            <div class="flex-1 min-h-0 overflow-auto flex flex-col gap-4 info">
                <!-- About = flex-1 -->
                <div class="w-full flex flex-col flex-1 min-h-0">
                    <h3 class="subheading shrink-0">About me</h3>
                    <!-- Contenedor a toda la altura y botones pegados abajo -->
                    <Container
                        class="!flex !flex-col !items-start !p-5 !gap-4 !h-full flex-1 min-h-0"
                    >
                        <p>
                            I’m Miguel Santiesteban, a 22-year-old Computer
                            Science student from the Canary Islands, Spain. I
                            specialize in backend development and love building
                            projects from the ground up, solving hard problems,
                            and learning continuously.
                        </p>

                        <div class="proj-actions mt-auto">
                            <a
                                class="btn-primary btn-compact"
                                href={CV_URL}
                                download>Download CV</a
                            >
                            <a
                                class="btn-secondary btn-compact"
                                href={`mailto:${EMAIL}?subject=Contacto%20—%20Miguel%20Santiesteban`}
                                >Contact</a
                            >
                        </div>
                    </Container>
                </div>

                <!-- Stack -->
                <div class="w-full flex flex-col flex-none">
                    <h3 class="subheading shrink-0">Stack</h3>
                    <Container
                        class="!flex !flex-col !items-start gap-4 p-6 !h-auto flex-none"
                    >
                        <div class="flex flex-wrap gap-4 !p-3">
                            <span class="chip">TypeScript</span>
                            <span class="chip">Node.js</span>
                            <span class="chip">NestJS</span>
                            <span class="chip">Prisma</span>
                            <span class="chip">MySQL</span>
                            <span class="chip">React</span>
                            <span class="chip">Docker</span>
                            <span class="chip">Docker</span>
                            <span class="chip">Docker</span>
                            <span class="chip">Docker</span>
                        </div>
                    </Container>
                </div>

                <!-- Top projects -->
                <div class="w-full flex flex-col flex-none">
                    <h3 class="subheading shrink-0">Top projects</h3>
                    <div class="proj-grid">
                        <ProjectCard
                            title="[Nombre del proyecto]"
                            description="[Descripción breve. Qué resuelve, rol, impacto.]"
                            tags={["[Stack 1]", "[Stack 2]", "[Stack 3]"]}
                            liveUrl="#"
                            repoUrl="#"
                            media={[
                                {
                                    kind: "image",
                                    src: "/img/projects/p1-1.jpg",
                                    alt: "Vista 1",
                                },
                                {
                                    kind: "image",
                                    src: "/img/projects/p1-2.jpg",
                                    alt: "Vista 2",
                                },
                                {
                                    kind: "video",
                                    src: "/video/projects/p1-demo.mp4",
                                    poster: "/img/projects/p1-cover.jpg",
                                },
                            ]}
                        />
                        <ProjectCard
                            title="[Proyecto 2]"
                            description="[Descripción breve.]"
                            tags={["[Tech A]", "[Tech B]"]}
                            repoUrl="#"
                            media={[
                                {
                                    kind: "image",
                                    src: "/img/projects/p2-1.jpg",
                                    alt: "Vista 1",
                                },
                                {
                                    kind: "image",
                                    src: "/img/projects/p2-2.jpg",
                                    alt: "Vista 2",
                                },
                            ]}
                        />
                        <ProjectCard
                            title="[Proyecto 3]"
                            description="[Descripción breve.]"
                            tags={["[Tech X]", "[Tech Y]"]}
                            liveUrl="#"
                            media={[
                                {
                                    kind: "image",
                                    src: "/img/projects/p3-1.jpg",
                                    alt: "Vista 1",
                                },
                            ]}
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>
</Section>

<style>
    .about-photo {
        mask: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 1) 0%,
            rgba(0, 0, 0, 1) 70%,
            rgba(0, 0, 0, 0) 100%
        );
        -webkit-mask: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 1) 0%,
            rgba(0, 0, 0, 1) 70%,
            rgba(0, 0, 0, 0) 100%
        );
    }
    .info {
        font-family:
            "Poppins",
            ui-sans-serif,
            system-ui,
            -apple-system,
            "Segoe UI",
            Roboto,
            "Helvetica Neue",
            Arial;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.75rem;
        text-align: justify !important;
        opacity: 0.9;
    }
    .chip {
        padding: 0.4rem 0.8rem;
        border-radius: 9999px;
        font-size: 0.85rem;
        line-height: 1;
        background: color-mix(in oklab, white 6%, transparent);
        border: 1px solid color-mix(in oklab, white 28%, transparent);
        box-shadow: 0 1px 0 rgba(0, 0, 0, 0.2) inset;
        backdrop-filter: saturate(140%) blur(8px);
    }
    .btn-primary,
    .btn-secondary {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.6rem 1rem;
        border-radius: 0.8rem;
        font-weight: 600;
        border: 1px solid;
        transition:
            transform 0.12s ease,
            opacity 0.12s ease;
        will-change: transform;
    }
    .btn-primary {
        background: color-mix(in oklab, white 14%, transparent);
        border-color: color-mix(in oklab, white 36%, transparent);
    }
    .btn-secondary {
        background: transparent;
        border-color: color-mix(in oklab, white 28%, transparent);
    }
    .btn-primary:hover,
    .btn-secondary:hover {
        transform: translateY(-1px);
    }

    .subheading {
        margin-left: 1rem;
        font-weight: 500;
        font-size: 1.05rem;
        opacity: 100%;
    }
    .proj-grid {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 0.75rem;
    }
    @media (max-width: 1280px) {
        .proj-grid {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }
    @media (max-width: 1024px) {
        .proj-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
