---
import { order } from "../../lib/colors";
import ColorDot from "./ColorDot.astro";
---

<nav class="w-full flex justify-center mt-3 relative z-30 pointer-events-auto">
    <div
        class="relative flex items-center gap-4 px-4 py-2 rounded-full
      supports-[backdrop-filter:blur(0)]:bg-white/10 bg-white/60
      backdrop-blur-xl backdrop-saturate-150
      ring-1 ring-inset ring-white/20 shadow-lg shadow-black/10
      before:content-[''] before:absolute before:inset-0 before:rounded-full
      before:bg-gradient-to-b before:from-white/60 before:to-white/0
      before:opacity-40 before:pointer-events-none"
        style={{ WebkitBackdropFilter: "saturate(180%) blur(20px)" }}
    >
        {
            order.map((c) => (
                <ColorDot key={c} color={c} target={`#panel-${c}`} title={c} />
            ))
        }
    </div>
</nav>
