---
export interface Props {
    class?: string;
    'data-i18n-key'?: string;
    role?: string;
}

const {
    class: className,
    'data-i18n-key': i18nKey,
    role,
} = Astro.props;
---

<span
    class:list={['chip', className]}
    data-i18n-key={i18nKey}
    role={role}
>
    <slot />
</span>

<style>
    .chip {
        display: inline-flex;
        align-items: center;
        font-size: clamp(0.7rem, 0.78rem, 0.85rem);
        font-weight: 500;
        line-height: 1;
        padding: clamp(0.3rem, 0.35rem, 0.4rem) clamp(0.5rem, 0.6rem, 0.7rem);
        border-radius: var(--br-mid);
        border: 1px solid var(--ring);
        color: var(--ink);
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(4px);
        transition: background 160ms ease, border-color 160ms ease, box-shadow 160ms ease, transform 160ms ease;
        box-shadow: 0 1px 0 rgba(255, 255, 255, 0.08) inset, 0 4px 16px rgba(0, 0, 0, 0.25);
        cursor: default;
        flex-shrink: 1;
        min-width: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        box-sizing: border-box;
    }
</style>
