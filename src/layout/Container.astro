---
interface Props {
    id?: string;
    sticky?: boolean;
    class?: string;
}
---

<div
    id={Astro.props.id}
    class={`container w-full h-full border border-white flex justify-center pointer-events-none ${Astro.props.class}`}
>
    <div class="pointer-events-auto">
        <slot />
    </div>
</div>
